<!DOCTYPE html>
<html lang="en">
<head>

    <!-- static head -->
    <%- include('./../components/head') %>
    <link rel="stylesheet" href="/css/home.css">

</head>
<body>

    <!-- navbar -->
    <%- include('./../components/navbar.ejs') %>

    <!-- content -->
    <section class="slider">
        <div class="slider_content" id="slider">
            <div class="list">
                <% homeImgs.forEach(homeImg => { %>
                    <div class="item">
                        <img src="/assets/<%= homeImg.img %>" alt="">
                    </div>
                <% }) %>
            </div>
            <div class="buttons">
                <button id="prev"> < </button>
                <button id="next"> > </button>
            </div>
            <ul class="dots">
                <li class="active"></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </section>

    <!-- footer -->
    <%- include('./../components/footer.ejs') %>

    <!-- home script -->
    <script src="/js/home-script.js"></script>

</body>
</html>