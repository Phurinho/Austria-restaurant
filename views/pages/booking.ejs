<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./../components/head') %>
    <link rel="stylesheet" href="/css/booking.css">
</head>
<body>
    <!-- navbar-->
    <%- include('./../components/navbar') %>

    <section class="title-booking">
        <h1 class="title">Booking</h1>
        <div class="textfield-container">
            <input type="text" placeholder="Name" required>
            <input type="date" placeholder="Date" required>
            <input type="number" placeholder="Count" min="1" required>
            <input type="text" placeholder="Allergy">
        </div>
        <iframe src="https://calendar.google.com/calendar/embed?src=watcharapong16599%40gmail.com&ctz=Asia%2FBangkok" class="calendar"></iframe>
    </section>

    <section class="flex-container">
        <div class="pdf-container">
            <h1>Menu</h1>
            <img src="/assets/menu_paper.jpeg" alt="Menu" class="menu-image">
            <p>Your browser does not support displaying PDFs. <a href="/assets/menu/menu_paper.pdf">Download the PDF</a></p>
        </div>
        <div class="order-container">
            <h1>Order Details</h1>
            <textarea placeholder="Enter your order details here..." required></textarea>
            <button type="submit">Order now</button>
        </div>
    </section>
    <section class="feedback">
        <div class="image-container">
            <img src="/assets/feedback-img.jpg" alt="">
        </div>
        <div class="feedback-container">
            <h1>Feedback</h1>
            <form action="">
                <input type="text" placeholder="Name">
                <input type="email" placeholder="Email">
                <input type="text" placeholder="Subject">
                <textarea name="" id="" placeholder="Message"></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
    </section>

    <!-- footer -->
    <%- include('./../components/footer') %>
</body>
</html>
