<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./../components/head') %>
        <link rel="stylesheet" href="/css/booking.css">
</head>

<body>
    <!-- navbar-->
    <%- include('./../components/navbar') %>
        <section class="super-container">

            <div class="title-container">
                <h1>BOOKING</h1>
            </div>

            <div class="flex-container">
                <!-- pdf container -->
                <div class="pdf-container">
                    <h1>Menu</h1>
                    <section class="slider">
                        <div class="slider_content" id="slider">
                            <div class="list">
                                <% menu_book.forEach((menu)=> { %>
                                    <div class="item">
                                        <img src="/assets/<%= menu.path %>" alt="">
                                    </div>
                                    <% }) %>
                            </div>
                            <div class="buttons">
                                <button id="prev"><i class="fa-solid fa-arrow-left"></i></button>
                                <button id="next"><i class="fa-solid fa-arrow-right"></i></button>
                            </div>

                        </div>
                    </section>
                    <div class="pdf-d-lang">
                        <p><a href="/assets/menu/menu_English.pdf">Download the PDF for English</a></p>
                        <p><a href="/assets/menu/menu_German.pdf">Download the PDF for German</a></p>
                    </div>
                </div>

                <!-- order form -->
                <form action="" class="order-container" onsubmit="sendWhatsAppMessage(event)">
                    <h1>Order Details</h1>
                    <input type="date" id="date" placeholder="Date" required>
                    <input type="text" id="name" placeholder="Name" required>
                    <input type="tel" id="phone" placeholder="Phone" required>
                    <input type="email" id="email" placeholder="Email" required>
                    <input type="number" id="count" placeholder="Count" min="1" required>

                    <textarea id="details" placeholder="Enter your order details here..." required></textarea>

                    <!-- radio button -->
                    <div class="radio-container">
                        <div class="radio">
                            <input type="radio" name="check" id="restaurant" value = "Eat at restaurant"checked>
                            <label for="restaurant">Eat at restaurant</label>
                        </div>
                        <div class="radio">
                            <input type="radio" name="check" id="house" value="Take away">
                            <label for="house">Take away</label>
                        </div>
                        <div class="radio">
                            <input type="radio" name="check" id="cooking" value="Cooking at house">
                            <label for="cooking">Cooking at house</label>
                        </div>
                    </div>
                    <button type="submit">Order now</button>
                </form>
            </div>
            <div class="foodora-button">
                <p>Available in</p>
                <a href="https://www.foodora.at/restaurant/rjxp/charm-thai" class="">
                    <img src="/assets/Foodora_Logo.png" alt="">
                </a>
            </div>
        </section>

        <!-- footer -->
        <%- include('./../components/footer') %>

            <script src="/js/menu-script.js"></script>

            <!-- เชื่อมกับไฟล์ JS -->
            <script src="/js/order.js"></script>

</body>

</html>