<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./../components/head') %>
    <link rel="stylesheet" href="/css/booking.css">
</head>

<body>
    <!-- navbar-->
    <%- include('./../components/navbar') %>
    <section class="super-container">                                                                       

        <div class="title-container">
            <h1>BOOKING</h1>
        </div>

        <div class="flex-container">    
            <!-- pdf container -->
            <div class="pdf-container">
                <h1>Menu</h1>
                <section class="slider">
                    <div class="slider_content" id="slider">
                        <div class="list">
                            <% menuImgs_1.forEach( menu_1 => { %>
                                <div class="item">
                                    <img src="/assets/<%= menu_1.img %>" alt="">
                                </div>
                                <% }) %>
                        </div>
                        <div class="buttons">
                            <button id="prev"><i class="fa-solid fa-arrow-left"></i></button>
                            <button id="next"><i class="fa-solid fa-arrow-right"></i></button>
                        </div>
                
                    </div>
                </section>
                <p><a href="/assets/menu/menu_paper.pdf">Download the PDF</a></p>
            </div>

            <!-- order form -->
            <form action="" class="order-container">
                <h1>Order Details</h1>
                <input type="date" placeholder="Date" required>
                <input type="text" placeholder="Name" required>
                <input type="tel" placeholder="Phone" required>
                <input type="email" placeholder="Email" required>
                <input type="number" placeholder="Count" min="1" required>

                <textarea placeholder="Enter your order details here..." required></textarea>
                
                <!-- radio button -->
                <div class="radio-container">
                    <div class="radio">
                        <input type="radio" name="check" id="restaurant" checked>
                        <label for="restaurant">Eat at restaurant</label>
                    </div>
                    <div class="radio">
                        <input type="radio" name="check" id="house">
                        <label for="house">Take away</label>
                    </div>
                    <div class="radio">
                        <input type="radio" name="check" id="cooking">
                        <label for="cooking">Cooking at house</label>
                    </div>
                </div>
                <button type="submit">Order now</button>
            </form>
        </div>
    </section>
    
    <!-- footer -->
    <%- include('./../components/footer') %>

    <script src="/js/menu-script.js"></script>
</body>

</html>