<!DOCTYPE html>
<html lang="en">

<head>

    <!-- static head -->
    <%- include('./../components/head') %>
        <link rel="stylesheet" href="/css/menu.css">

</head>

<body>

    <!-- navbar -->
    <%- include('./../components/navbar') %>

        <article>
            <div class="hotdeal-container">

                <div class="hotdeal-slide">
                    <% if (hotdealImgs.length > 0) { %>
                        <div class="hotdeal-item" style="background-image: url('/assets/<%= hotdealImgs[0].path %>');">
                            <div class="hotdeal-content">
                                <div class="hotdeal-name">
                                    <%= hotdealImgs[0].name %>
                                </div>
                                <div class="hotdeal-des">
                                    <%= hotdealImgs[0].detail %>
                                </div>
                                <button>See More</button>
                            </div>
                        </div>
                        <% } %>
                </div>

                <!-- <div class="hotdeal-button">
                <button class="hotdeal-prev"><i class="fa-solid fa-arrow-left"></i></button>
                <button class="hotdeal-next"><i class="fa-solid fa-arrow-right"></i></button>
            </div> -->

            </div>


            <section class="menu">
                <div class="menu-container">
                    <% allmenu.forEach((menu_category) => { %>
                        <h1><%= menu_category.category %></h1>
                        <div class="food-container">
                            <% menu_category.menu.forEach((menu)=> { %>
                                <div class="food">
                                    <img src="/assets/<%= menu.path %>" alt="Not Found Image">
                                    <div class="food-content">
                                        <p><%= menu.name %></p>
                                        <p>€<%= menu.price %></p>
                                        <!-- <button>Add</button> -->
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% }) %>
                </div>
            </section>

            <section class="menu-paper">
                <!-- <img src="/assets/menu_paper.jpeg" alt=""> -->
                <section class="slider">
                    <div class="slider_content" id="slider">
                        <div class="list">
                            <% menu_book.forEach((menu) => { %>
                                <div class="item">
                                    <img src="/assets/<%= menu.path %>" alt="" class="zoomable">
                                </div>
                                <% }) %>
                        </div>
                        <div class="buttons">
                            <button id="prev"><i class="fa-solid fa-arrow-left"></i></button>
                            <button id="next"><i class="fa-solid fa-arrow-right"></i></button>
                        </div>
                    </div>
                </section>

                <!-- Modal สำหรับซูมรูป -->
                <div id="zoomModal" class="modal">
                    <span id="closeModal">&times;</span>
                    <div class="modal-zoom-container">
                        <img class="modal-content" id="zoomedImage">
                    </div>
                </div>

            </section>

        </article>

        <!-- footer -->
        <%- include('./../components/footer') %>
            <script src="/js/menu-script.js"></script>

</body>

</html>